<input id="popup-messages" value="<%=@values%>" type="hidden" />
<div class="diet-block mainContent">

    <div class="sectionTitle dietBodyLogo dietColor">
      <%=t 'menu_diet' %>
    </div>
    <div class="contentBg">
        <div style="padding: 10px;">
          <%= render "forms/element", locals: {:showButton => true,
                                               :elementName => 'diet_food',
                                               :style => 'dietStyle',
                                               :title => 'food',
                                               :img => 'food40.png',
                                               :resourceName => 'diets'
                                    }%>

            <div class="dataFormContainer dietStyle">
                <div class="dataFormTitle">
                    <%= image_tag "drink40.png" %><br/>
                  <%=t 'drink' %>
                </div>
                <%= form_tag( "/users/#{current_user.id}/diets", remote: true, id: "drink-create-form", class: "resource-create-form diet-form") do %>
                  <%= render "forms/diet_drink" %>
                  <button class="dataFormField"><%=t 'button_add'%></button>
                <% end %>
            </div>
            <div class="dataFormSeparator dietStyle"></div>

            <div class="dataFormContainer dietStyle">
            <div class="dataFormTitle">
              <%= image_tag "food40.png" %><br/>
              <%=t 'quick_calories' %>
            </div>
            <%= form_tag( "/users/#{current_user.id}/diets", remote: true, id: "calories-create-form", class: "resource-create-form diet-form") do %>
                <%= render "forms/diet_quick_calories" %>
                <button id="addCaloriesButton" class="dataFormField"><%=t 'button_add'%></button>
            <% end %>
            </div>
            <div class="dataFormSeparator dietStyle"></div>

              <% if current_user.profile.nil? || current_user.profile.smoke %>
                <div class="dataFormContainer dietStyle">
                    <div class="dataFormTitle">
                        <%= image_tag "smoke40.png" %><br/>
                      <%=t 'smoking' %>
                    </div>
                    <%= form_tag( "/users/#{current_user.id}/diets", remote: true, id: "smoke-create-form", class: "resource-create-form diet-form") do %>
                        <%= render "forms/diet_smoke" %>
                        <button class="dataFormField"><%=t 'button_add'%></button>
                    <% end %>
                </div>
                <div class="dataFormSeparator dietStyle"></div>
              <% end %>

            <div class="clearBoth"></div>
        </div>

    </div>

    <div class="sectionTitle dietBodyLogo dietColor" style="margin-top: 40px;">
        <span class="hisTitle selected"><%=t 'history_link'%></span> | <span class="favTitle"><%=t 'fav_link'%></span>
          <div class="right">
            <span class="tag kcal"><%=t 'calories'%></span>
            <span class="tag carbs"><%=t 'carbs'%></span>
            <span class="tag fat"><%=t 'fat'%></span>
            <span class="tag prot"><%=t 'prot'%></span>
          </div>
    </div>

    <table class="historyTable"  cellpadding="0" cellspacing="0">
        <tbody id="recentResourcesTable">
        </tbody>
    </table>
</div>
<script>
  pages_menu();
  diet_loaded();
</script>
<% content_for :menu do %>
    <%= render "menu" %>
<% end %>
<% content_for :title_text do %>
    <%=t 'menu_diet' %> | SmartDiab
<% end %>
