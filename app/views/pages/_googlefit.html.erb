  <div class="sectionTitle googlefit_large c0">
    Google Fit
  </div>
  <div class="contentBg" style="margin-top: 20px;border-radius: 20px;">
    <div style="padding: 10px;">
      <table style="width: 100%;color: #3d3d3d;">
        <tbody>
        <tr>
          <td style="width: 180px;height: 50px;">
            Active since
          </td>
          <td>
            <% if @active_since_google%>
                <%=@active_since_google.strftime("%Y. %m. %d.  %H:%M")%>
              <% end %>
          </td>
          <td style="width: 200px;text-align: right;" rowspan="3">
            <% if @googleconn %>
                <p>
                  <button id="sync-google-button" style="width: 180px;height: 50px; background: #4FBDF2;color: #ffffff;font-size: 15px;border: none">
                    SYNCHRONIZE NOW
                  </button>
                  <button id="disconnect-google-button" style="margin-top: 15px;width: 180px;height: 50px; background: #ff0000;color: #ffffff;font-size: 15px;border: none">
                    DISCONNECT
                  </button>
                </p>
            <% else %>
                <p>
                  <button id="signin-google-button" style="width: 180px;height: 50px; background: #4FBDF2;color: #ffffff;font-size: 15px;border: none">
                    CONNECT
                  </button>
                </p>
            <% end %>
          </td>
        </tr>
        <tr>
          <td style="width: 180px;height: 50px;">
            Last synchronization
          </td>
          <td>
            <% if @last_sync_date_google%>
                <%=@last_sync_date_google.strftime("%Y. %m. %d.  %H:%M")%>
              <% end %>
          </td>

        </tr>
        <tr>
          <td>

          </td>
          <td>

          </td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
