<form id="heart-form">
    <input name="measurement[user_id]" value="<%= @user.id %>" type="hidden">
    <input name="measurement[source]" value="smartsport" type="hidden">
    <div class="logform clearfix" id="heart-form-div">
        <fieldset>
            <div class="field">
                <label for="meas-sys">SYS</label><span class="entry"><input id="meas-sys" name="measurement[systolicbp]" class="entry-mini"></span>
            </div>
            <div class="field">
                <label for="meas-dia">DIA</label><span class="entry"><input id="meas-dia" name="measurement[diastolicbp]" class="entry-mini"></span>
            </div>
            <div class="field">
                <label for="meas-hr">HR</label><span class="entry"><input id="meas-hr" name="measurement[pulse]" class="entry-mini"></span>
            </div>
            <div class="field">
                <label for="meas-date">Date</label><span class="entry"><input id="meas-date" name="measurement[date]" class="date-input"></span>
            </div>
            <div id="meas-message" class="hidden-placed">
                &nbsp;
            </div>
            <div class="field action-field">
                <span></span>
                <div class="log-actions">
                                <span>
                                    <button id="new-measurement-button" class="button minibutton primary right">Add</button>
                                </span>
                </div>
            </div>
        </fieldset>

    </div>
</form>