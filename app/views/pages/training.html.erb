<div class="training-block" id="training-container">
    <div class="columns">
        <div id="activity-trend-container" class="boxed-group">
            <h3 class="legend-label">
                <img src="<%= asset_path( "logo.png")%>" width="24px" height="24px" class="left">
                <div class="training-type left">Activity trend</div>
                <div class="selected-meas legend-container right"></div>
            </h3>

            <div class="boxed-group-inner chart activity-trend-chart">
                <svg class="activity-trend-chart-svg">
                </svg>
            </div>
        </div>
    </div>
    <div class="columns">
        <div class="column one-half">
            <% if @conn.size > 0 %>
                <% for i in (0..@conn.size-1).select {|it| it%2==0} %>
                    <%= render partial: 'activity_chart', locals: { :connection_name => @conn[i].name} %>
                <% end %>
            <% end %>
        </div>

        <div class="column one-half">
            <% if @conn.size > 1 %>
                <% for i in (1..@conn.size-1).select {|it| it%2==1} %>
                    <%= render partial: 'activity_chart', locals: { :connection_name => @conn[i].name} %>
                <% end %>
            <% end %>
        </div>
    </div>

    <div id="legend-template" class="hidden">
        <span class="chart-legend"></span>
    </div>
</div>

<script type="text/javascript">
    training_loaded();
</script>