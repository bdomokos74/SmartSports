<div class="health-block mainContent">
    <div class="columns">

        <div id="heart-trend-container" class="boxed-group connection-block">

            <h3 class="noClickSelect">
                <img src="<%= asset_path( "withings-logo.png")%>" width="24px" height="24px" class="left">
                <div class="training-type left">Heart trend</div>
                <div class="selected-meas legend-container right"></div>
            </h3>

            <div class="boxed-group-inner chart bloodpressure-chart">
                <svg class="heart-trend-chart-svg">
                </svg>
            </div>
        </div>
    </div>
    <div class="columns">
        <div class="columnLeft one-half">

            <div id="bloodsugar-container" class="boxed-group connection-block">
                <h3 class="noClickSelect">
                    <img src="<%= asset_path( "logo-login.png")%>" width="24px" height="24px" class="left">
                    <div class="training-type left">Blood glucose level</div>
                    <div class="selected-meas left"></div>
                    <div class="selected-meas legend-container right"></div>
                </h3>

                <div class="boxed-group-inner chart bloodsugar-chart">
                    <svg class="bloodsugar-chart-svg">
                    </svg>
                </div>
            </div>

        </div>
        <div class="columnRight one-half">
            <div id="heartrate-container" class="boxed-group connection-block">
                <h3 class="noClickSelect">
                    <img src="<%= asset_path( "withings-logo.png")%>" width="24px" height="24px" class="left">
                    <div class="training-type left">Heart rate / SPO2</div>
                    <div class="selected-meas left"></div>
                    <div class="selected-meas legend-container right"></div>
                </h3>

                <div class="boxed-group-inner chart bloodpressure-chart">
                    <svg class="heartrate-chart-svg">
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <div id="legend-template" class="hidden">
        <span class="chart-legend"></span>
    </div>
</div>

<% content_for :page_logic do %>
    health_loaded()
<% end %>
