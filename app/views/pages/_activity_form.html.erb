<div>
    <input id="activity-form-userid" name="user_id" value="<%= @user.id %>" type="hidden">
    <input id="activity-form-source" name="activity[source]" value="smartsport" type="hidden">
    <input id="current-activity-data" type="hidden"/>

    <div class="logform clearfix hidden" id="act-form-div">
        <form id="act-form">

            <div id="act-form-elem" class="list-container">
                <div class="list-item">
                    <span class="list-attr">Walking</span>
                    <i class="fa fa-child header-icon fa-lg"></i>
                    <span class="list-attr label">Dutation</span>
                    <span class="list-attr"><input class="entry-mini-half" type="text" name="duration" value=""></span>
                    <span class="list-attr label">Steps</span>
                    <span class="list-attr"><input class="entry-mini-half" type="text" name="steps" value=""></span>
                    <span class="list-attr label">Distance</span>
                    <span class="list-attr"><input class="entry-mini-half" type="text" name="distance" value=""></span>
                    <i id="walk-activity-add" class="fa fa-plus-circle fa-2x text-green lifestyle-add"></i>
                </div>
                <div class="list-item">
                    <span class="list-attr">Running</span>
                    <i class="fa fa-child header-icon fa-lg"></i>
                    <span class="list-attr label">Dutation</span>
                    <span class="list-attr"><input class="entry-mini-half" type="text" name="duration" value=""></span>
                    <span class="list-attr label">Steps</span>
                    <span class="list-attr"><input class="entry-mini-half" type="text" name="steps" value=""></span>
                    <span class="list-attr label">Distance</span>
                    <span class="list-attr"><input class="entry-mini-half" type="text" name="distance" value=""></span>
                    <i id="walk-running-add" class="fa fa-plus-circle fa-2x text-green lifestyle-add"></i>
                </div>
                <div class="list-item">
                    <span class="list-attr">Cycling</span>
                    <i class="fa fa-bicycle header-icon fa-lg"></i>
                    <span class="list-attr label">Dutation</span>
                    <span class="list-attr"><input class="entry-mini-half" type="text" name="duration" value=""></span>
                    <span class="list-attr label">Distance</span>
                    <span class="list-attr"><input class="entry-mini-half" type="text" name="steps" value=""></span>
                    <span class="list-attr"></span>
                    <span class="list-attr"></span>
                    <i id="walk-running-add" class="fa fa-plus-circle fa-2x text-green lifestyle-add"></i>
                </div>
            </div>
        </form>

            <div id="activity-table" class="list-container recent-records-table">
                <div class="list-item">
                    <span class="list-header"></span>
                    <span class="list-header">Time</span>
                    <span class="list-header">Type</span>
                    <span class="list-header">Duration</span>
                    <span class="list-header">Steps</span>
                    <span class="list-header"></span>
                </div>
                <!--place of rows-->
                <div id="act-iid" class="list-item measure-item">
                    <i class="fa fa-check success"></i>
                    <span class="list-attr attr-date long">2015-02-11 09:35</span>
                    <span class="list-edit hidden"><input class="long attr-date" type="text" name="date" value="2015-02-11 09:35"></span>
                    <span class="list-attr attr-bp medium">Running</span>

                    <span class="list-attr attr-bp medium">61.0</span>
                    <span class="list-edit hidden"><input class="medium attr-bp" type="text" name="heart" value="123"></span>

                    <span class="list-ctrl show">
                        <div class="edit-meas-control">Edit</div>
                    </span>
                    <span class="list-ctrl show">
                        <div class="delete-meas-control">Delete</div>
                    </span>
                </div>
            </div>

            <div id="activity-row-template" class="hidden">
                <div id="actt-iid" class="list-item measure-item">
                    <i class="fa fa-check success"></i>
                    <span class="list-attr attr-date long">2015-02-11 09:35</span>
                    <span class="list-edit hidden"><input class="long attr-date" type="text" name="date" value="2015-02-11 09:35"></span>
                    <span class="list-attr attr-bp medium">123/66/45</span>
                </div>
            </div>

    </div>

</div>
