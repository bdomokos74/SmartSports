<div class="medication-block mainContent">

    <div class="sectionTitle medicationBodyLogo medicationColor">
        Medication
    </div>
    <div class="contentBg medicationStyle">
        <div style="padding: 10px;">
            <div class="dataFormContainer">
                <div class="dataFormTitle">
                    <%= image_tag "oral40.png" %><br/>
                    Medications
                </div>
                <%= form_tag( "/users/#{current_user.id}/medications", remote: true, id: "oral-med-create-form", class: "resource-create-form medication-form") do %>
                    <div class="dataForm">
                        <input type="hidden" name="medication[source]" value="<%= @default_source %>">

                        <input id="oral_medication_name" name="med_name" class="dataFormField">
                        <input id="medname" name="medication[medication_type_id]" type="hidden">

                        <input id="medication_amount" type="text" name="medication[amount]" class="dataFormField"/>

                        <div class="dataFormFieldUnit">piece</div>
                        <br>

                        <input id="medications_datepicker" type="text"  name="medication[date]" class="dataFormField" value='<%= DateTime.current.strftime("%F %R") %>'>
                        <br>

                    </div>
                    <div class="dataFormButton">
                        <button class="sendForm">Add</button>
                    </div>
                <% end %>
            </div>
            <div class="dataFormSeparator"></div>

            <div class="dataFormContainer">
                <div class="dataFormTitle">
                    <%= image_tag "insulin40.png" %><br/>
                    Insulin
                </div>
                <%= form_tag( "/users/#{current_user.id}/medications", remote: true, id: "insulin-create-form", class: "resource-create-form medication-form") do %>
                    <div class="dataForm">
                        <input type="hidden" name="medication[source]" value="<%= @default_source %>">

                        <input id="insulin_name" name="ins_name" type="text" class="dataFormField">
                        <input id="insname" name="medication[medication_type_id]" type="hidden">

                        <input id="medication_insulin_dosage" type="text" name="medication[amount]" class="dataFormField "/>
                        <div class="dataFormFieldUnit ">unit</div>
                        <br>

                        <input id="medications_insulin_datepicker" class="dataFormField" type="text"  name="medication[date]" value='<%= DateTime.current.strftime("%F %R") %>'>
                        <br>

                    </div>
                    <div class="dataFormButton">
                        <button class="sendForm">Add</button>
                    </div>
                <% end %>
            </div>
            <div class="dataFormSeparator"></div>



            <div style="clear: both"></div>
        </div>

    </div>

    <div class="sectionTitle medicationBodyLogo medicationColor" style="margin-top: 40px;">
        <span>History</span> | <span>Favorites</span>
    </div>

    <table class="historyTable"  cellpadding="0" cellspacing="0">
        <tbody id="recentResourcesTable">

        <%= render partial: "shared/medication_item", collection: @medications %>

        </tbody>
    </table>

</div>

<% content_for :page_logic do %>
    medications_loaded()
<% end %>
<% content_for :title_text do %>
    Medication | SmartDiab
<% end %>