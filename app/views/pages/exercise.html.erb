<div class="training-block mainContent" id="training-container">
  <div class="sectionTitle exerciseBodyLogo exerciseColor">
    Activity
  </div>
  <div class="contentBg exerciseStyle">
    <div style="padding: 10px;">
      <div class="dataFormContainer">
        <div class="dataFormTitle">
          <%= image_tag "bicycle40.png" %><br/>
          Exercise
        </div>
        <%= form_tag("/users/#{current_user.id}/activities", remote: true, id: "exercise-create-form", class: "resource-create-form exercise-form") do %>
            <div class="dataForm">
              <input type="hidden" name="activity[source]" value="<%= @default_source %>">
              <input type="hidden" name="activity[group]" value="sport">

              <input  id="activityname" type="search" name="activity_name" class="dataFormField" placeholder="Start typing or select..." disabled>
              <input id="activity_type_id" name="activity[activity_type_id]" type="hidden">

              <label for="activity_scale" style="margin-left: 20px;">Intensity</label>
              <div class="dataScale">
                <div id="activity_scale" class="dataFormField"></div>
              </div>
              <div id="activity_percent" class="dataFormFieldUnit">Moderate</div>
              <input id="activity_intensity" type="hidden" name="activity[intensity]"/>

              <input id='activity_start_datepicker' type='text' class="dataFormField" name="activity[start_time]" value="<%= (DateTime.current-30.minutes).strftime("%F %R") %>"/>
              <div class="dataFormFieldUnit">start</div>

              <input id='activity_end_datepicker' type='text' class="dataFormField" name="activity[end_time]" value="<%= DateTime.current.strftime("%F %R") %>"/>
              <div class="dataFormFieldUnit">end</div>

            </div>
            <button class="dataFormField">Add</button>
        <% end %>
      </div>
      <div class="dataFormSeparator"></div>

      <div class="dataFormContainer">
        <div class="dataFormTitle">
          <%= image_tag "regular40.png" %><br/>
          Regular activity
        </div>
        <%= form_tag("/users/#{current_user.id}/activities", remote: true, id: "regular-activity-create-form", class: "resource-create-form exercise-form") do %>
            <div class="dataForm">
              <input type="hidden" name="activity[source]" value="<%= @default_source %>">
              <input type="hidden" name="activity[group]" value="other">

              <input id="otheractivityname" type="search" name="activity_name" class="dataFormField" placeholder="Start typing or select..." disabled>
              <input id="activity_other_type_id" name="activity[activity_type_id]" type="hidden">

              <label for="activity_other_scale" style="margin-left: 20px;">Intensity</label>
              <div class="dataScale">
                <div id="activity_other_scale" class="dataFormField"></div>
              </div>
              <div id="activity_other_percent" class="dataFormFieldUnit">Moderate</div>
              <input id="activity_other_intensity" type="hidden" name="activity[intensity]"/>

              <input id='activity_other_start_datepicker' type='text' class="dataFormField" name="activity[start_time]" value="<%= (DateTime.current-30.minutes).strftime("%F %R") %>"/>
              <div class="dataFormFieldUnit">start</div>

              <input id='activity_other_end_datepicker' type='text' class="dataFormField" name="activity[end_time]" value="<%= DateTime.current.strftime("%F %R") %>"/>
              <div class="dataFormFieldUnit">end</div>

            </div>
            <button class="dataFormField">Add</button>
        <% end %>
      </div>

      <div class="dataFormSeparator"></div>
      <div style="clear: both"></div>
    </div>
  </div>

  <div class="sectionTitle exerciseBodyLogo exerciseColor" style="margin-top: 40px;">
    <span class="hisTitle selected">History</span> | <span class="favTitle">Favorites</span>
    <div class="right">
      <span class="tag kcal">calories</span>
    </div>
  </div>

  <table class="historyTable" cellpadding="0" cellspacing="0">
    <tbody id="recentResourcesTable">
    </tbody>
  </table>
</div>

<% content_for :menu do %>
    <%= render "menu" %>
<% end %>
<% content_for :page_logic do %>
    exercise_loaded()
<% end %>
<% content_for :title_text do %>
    Exercise | SmartDiab
<% end %>
