                        <input id="running_steps" type="text" name="activity[steps]" class="dataFormField"/>

                        <div class="dataFormFieldUnit">steps</div>
                        <br>
                        <input id="running_duration" type="text" name="activity[duration]" class="dataFormField"/>

                        <div class="dataFormFieldUnit">min</div>
                        <br>
                        <input id="running_distance" type="text" name="activity[distance]" class="dataFormField"/>

                        <div class="dataFormFieldUnit">m</div>
                        <br>

                        <input id='running_datepicker' type='text' class="dataFormField" name="activity[start_time]" value="<%= DateTime.current.strftime("%F %R") %>"/>
                        <br>

                    </div>
                    <div class="dataFormButton">
                        <button class="sendForm">Add</button>
                    </div>
                <% end %>
            </div>
            <div class="dataFormSeparator"></div>
            <div class="dataFormContainer contentBg">
                <div class="dataFormTitle">
                    <%= image_tag "cycling40.png" %><br/>
                    Cycling
                </div>
