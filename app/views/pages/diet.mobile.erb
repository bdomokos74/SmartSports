<div data-role="page" id="main-page" >
    <div data-role="header">
      <h1>Diet</h1>
        <a href="#right-panel" data-icon="carat-r" data-iconpos="notext" data-shadow="false" data-iconshadow="false" >Open left panel</a>
        <a href="#add-form" data-icon="gear" data-iconpos="notext">Add</a>
    </div><!-- /header -->
    <input id="current-user-id" value="<%= current_user.id %>" type="hidden" >


    <div role="main" class="ui-content">
        <div class="ui-corner-all custom-corners">
          <div class="ui-bar ui-bar-a">
            <%= image_tag "food40.png" %>
            <h3>Food</h3>
          </div>
          <div class="ui-body ui-body-a">
            <%= form_tag( "/users/#{current_user.id}/diets", remote: true, id: "bp-create-form", class: "resource-create-form diet-form") do %>
                <input type="hidden" name="diet[source]" value="<%= @default_source %>">
                <input type="hidden" name="diet[type]" value="Food">
                <input type="search" id="foodname" name="food_name" placeholder="Food name, eg: chicken soup">
                <ul id="food_autocomplete" data-role="listview" data-inset="true" data-filter="true" data-input="#foodname"></ul>
                <input id="diet_type_id" name="diet[food_type_id]" type="hidden">
                <input id="diet_name" name="diet[name]" type="hidden">
                <label for="diet_scale">Amount:</label>
                <input id="diet_scale" type="range" name="diet[amount]" min="0.5" max="5" step="0.5" value="2.5">
                <input id='diet_food_datepicker' type='text' readonly="true" name="diet[date]" value="<%= DateTime.current.strftime("%F %R") %>"/>
                <button class="ui-shadow ui-btn ui-corner-all sendForm">Add Food</button>
            <% end %>
          </div>
        </div>
        <br>
        <div class="ui-corner-all custom-corners">
          <div class="ui-bar ui-bar-a">
            <%= image_tag "drink40.png" %>
            <h3>Drink</h3>
          </div>
          <div class="ui-body ui-body-a">
              <%= form_tag( "/users/#{current_user.id}/diets", remote: true, id: "bp-create-form", class: "resource-create-form diet-form") do %>
                  <input type="hidden" name="diet[source]" value="<%= @default_source %>">
                  <input type="hidden" name="diet[type]" value="Drink">
                  <input type="search" id="drinkname" name="drink_name" placeholder="Drink name, eg: coke">
                  <input id="diet_drink_name" name="diet[name]" type="hidden">
                  <input id="diet_drink_type_id" name="diet[food_type_id]" type="hidden">

                  <label for="diet_drink_scale">Amount:</label>
                  <input type="range" name="diet[amount]" id="diet_drink_scale" min="0.5" max="5" step="0.5" value="2.5">

                  <!--<div id="diet_drink_unit" class="dataFormFieldUnit">2.5dl</div>-->
                  <input id="diet_drink_cal" name="diet[calories]" type="hidden"/>
                  <input id="diet_drink_fat" name="diet[fat]" type="hidden"/>
                  <input id="diet_drink_carbs" name="diet[carbs]" type="hidden"/>
                  <input id="diet_drink_prot" name="diet[prot]" type="hidden"/>
                  <input id="diet_drink_category" name="diet[category]" type="hidden"/>

                  <input id='diet_drink_datepicker' type='text' class="dataFormField" name="diet[date]" value="<%= DateTime.current.strftime("%F %R") %>"/>
                  <button class="ui-shadow ui-btn ui-corner-all sendForm">Add Drink</button>
              <% end %>
          </div>
        </div>
        <br>
        <div class="ui-corner-all custom-corners">
          <div class="ui-bar ui-bar-a">
            <%= image_tag "smoke40.png" %>
            <h3>Smoking</h3>
          </div>
          <div class="ui-body ui-body-a">
            <%= form_tag( "/users/#{current_user.id}/diets", remote: true, id: "bp-create-form", class: "resource-create-form diet-form") do %>
                <input type="hidden" name="diet[source]" value="<%= @default_source %>">
                <input type="hidden" name="diet[type]" value="Smoke">

                <select id="diet_smoke_type" name="diet[name]">
                  <option>1 Cigarette</option>
                  <option>1 Cigar</option>
                  <option>1 Pipe</option>
                </select>

                <input id='diet_smoking_datepicker' type='text' readonly="true" name="diet[date]" value="<%= DateTime.current.strftime("%F %R") %>"/>
                <button class="ui-shadow ui-btn ui-corner-all sendForm">Add Smoking</button>
            <% end %>
          </div>
        </div>
        <br>
        <div class="ui-corner-all custom-corners">
            <div data-role="navbar" data-iconpos="bottom">
              <ul>
                <li><a id="hist-button" href="#" data-icon="grid" class="ui-btn-active">History</a></li>
                <li><a id="fav-button"href="#" data-icon="star">Favs</a></li>
              </ul>
            </div>
            <ul id="recentResourcesListview" data-role="listview" data-split-icon="gear" data-split-theme="a" data-inset="true" class="ui-body">
              <%= render partial: "shared/diet_item", collection: @diets, as: "diet_item" %>
            </ul>
        </div>
    </div><!-- /content -->


<div data-role="panel" id="right-panel" >
  <ul data-role="listview"  data-inset="true">
    <li><a href="/pages/dashboard"><%= image_tag "menu_dashboard.png", alt: "Dashboard", class: "ui-li-icon ui-corner-none" %>Dashboard</a></li>
    <li><a href="/pages/diet"><%= image_tag "menu_diet.png", alt: "Diet", class: "ui-li-icon ui-corner-none" %>Diet</a></li>
    <li><a href="/pages/exercise"><%= image_tag "menu_exercise.png", alt: "Exercise", class: "ui-li-icon ui-corner-none" %>Exercise</a></li>
    <li><a href="/pages/health"><%= image_tag "menu_health.png", alt: "Exercise", class: "ui-li-icon ui-corner-none" %>Health</a></li>
    <li><a href="/pages/medication"><%= image_tag "menu_medication.png", alt: "Exercise", class: "ui-li-icon ui-corner-none" %>Medication</a></li>
    <li><a href="/pages/wellbeing"><%= image_tag "palmtree60.png", alt: "Exercise", class: "ui-li-icon ui-corner-none" %>Well-Being</a></li>
    <li><a href="/pages/genetics"><%= image_tag "menu_genetics.png", alt: "Exercise", class: "ui-li-icon ui-corner-none" %>Genetics</a></li>
    <li><a href="/pages/analytics"><%= image_tag "analytics60.png", alt: "Exercise", class: "ui-li-icon ui-corner-none" %>Analitics</a></li>
  </ul>
  <a href="#" data-rel="close" class="ui-btn ui-corner-all ui-shadow ui-mini ui-btn-inline ui-icon-delete ui-btn-icon-left ui-btn-right">Close</a>
</div><!-- /panel -->
</div>
