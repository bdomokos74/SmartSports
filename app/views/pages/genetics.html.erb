<div class="genetics-block mainContent" id="genetics-container">


    <div class="sectionTitle geneticsBodyLogo geneticsColor">
        Genetics
    </div>
    <div class="contentBg geneticsStyle">
        <div style="padding: 10px;">
            <div class="dataFormContainer">
                <div class="dataFormTitle">
                    <%= image_tag "family40.png" %><br/>
                    Family History
                </div>
                <%= form_tag( "/users/#{current_user.id}/family_histories", remote: true, id: "bp-create-form", class: "resource-create-form family-history-form") do %>
                    <div class="dataForm">
                        <input type="hidden" name="family_history[source]" value="<%= @default_source %>">

                        <input id="gen_hist_relative" type="text" name="family_history[relative]" class="dataFormField"/>
                        <div class="dataFormFieldUnit"></div>
                        <br>

                        <input id="gen_hist_disease" type="text" name="family_history[disease]" class="dataFormField"/>
                        <div class="dataFormFieldUnit"></div>
                        <br>

                        <input id="gen_hist_note" type="text" name="family_history[note]" class="dataFormField"/>
                        <div class="dataFormFieldUnit"></div>
                        <br>


                    </div>
                    <div class="dataFormButton">
                        <button class="sendForm">Add</button>
                    </div>
                <% end %>
            </div>
            <div class="dataFormSeparator"></div>

            <div style="clear: both"></div>
        </div>

    </div>

    <div class="sectionTitle geneticsBodyLogo geneticsColor" style="margin-top: 40px;">
        <span>History</span> | <span>Favorites</span>
    </div>

    <table class="historyTable"  cellpadding="0" cellspacing="0">
        <tbody id="recentResourcesTable">

        <%= render partial: "shared/family_history_item", collection: @family_histories %>

        </tbody>
    </table>


</div>

<% content_for :page_logic do %>
    genetics_loaded()
<% end %>
<% content_for :title_text do %>
    Genetics | SmartDiab
<% end %>