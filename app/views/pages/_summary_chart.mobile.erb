<div id="dashboard-summary-container" >
    <div class="boxed-group">
        <input type="hidden" class="curr-date" />
        <input type="hidden" class="curr-meas" value="walking"/>
        <input type="hidden" class="is-weekly" value="no"/>

        <h3>
            <!--TODO icon-->
            <img src="<%= asset_path("logo.png")%>" width="24px" height="24px" class="left" style="color: purple">
            <div class="training-type left">Today's summary</div>
            <div class="detail training-detail left"></div>
        </h3>

        <div class="boxed-group-inner clearfix">
            <div class="meas-col">
                <div class="meas-block">
                    <div class="meas-val steps">
                    </div>
                    <div class="meas-annot">
                        Steps Walking
                    </div>
                </div>
                <div class="meas-block">
                    <div class="meas-val km-cycling">
                    </div>
                    <div class="meas-annot">
                        Km Cycling
                    </div>
                </div>
                <div class="meas-block">
                    <div class="meas-val km-running">
                    </div>
                    <div class="meas-annot">
                        Km Running
                    </div>
                </div>
            </div>

            <div class="meas-col">
                <div class="meas-center-container">
                    <div class="meas-center">
                        <div class="meas-val avg-percent">
                            0.0%
                        </div>
                        <div class="meas-annot avg-description">
                            of weekly average
                        </div>
                    </div>
                    <div class="meas-percent">
                        <svg class="goal-percent-indicator"></svg>
                    </div>
                </div>
            </div>

            <!--<div class="meas-col">-->
                <!--<div class="meas-block">-->
                    <!--<div class="meas-val calories"></div>-->
                    <!--<div class="meas-annot">Calories</div>-->
                <!--</div>-->
                <!--<div class="meas-block">-->
                    <!--<div class="meas-val distance"></div>-->
                    <!--<div class="meas-annot">Km distance</div>-->
                <!--</div>-->
                <!--<div class="meas-block">-->
                    <!--<div class="meas-val meas-small duration"></div>-->
                    <!--<div class="meas-annot">Activity</div>-->
                <!--</div>-->
            <!--</div>-->
        </div>

        <div class="boxed-group-inner chart activity-chart">
            <svg class="activity-chart-svg">
            </svg>
        </div>
    </div>





    <div id="activity-trend-container" class="boxed-group">
        <h3 class="legend-label">
            <img src="<%= asset_path( "logo.png")%>" width="24px" height="24px" class="left">
            <div class="training-type left">Activity trend</div>
            <div class="selected-meas legend-container right"></div>
        </h3>

        <div class="boxed-group-inner chart activity-trend-chart">
            <svg class="activity-trend-chart-svg">
            </svg>
        </div>
    </div>
    <div id="legend-template" class="hidden">
        <span class="chart-legend"></span>
    </div>


    <div id="heart-trend-container" class="boxed-group connection-block">
        <h3 class="legend-label">
            <img src="<%= asset_path( "withings-logo.png")%>" width="24px" height="24px" class="left">
            <div class="training-type left">Heart trend</div>
            <div class="selected-meas legend-container right"></div>
        </h3>

        <div class="boxed-group-inner chart bloodpressure-chart">
            <svg class="heart-trend-chart-svg">
            </svg>
        </div>
    </div>
</div>
