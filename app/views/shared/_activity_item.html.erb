<tr class="bg">
  <% if activity_item.group %>
      <td style="width:40px;" class="padded">
          <%= image_tag activity_item.group+"40.png" %>
      </td>
      <td class="historyTitle padded">
          <strong><%= activity_item.group.capitalize %></strong>
          <% if activity_item.steps %>
              <span><%= activity_item.steps %> steps</span>
          <% end %>
          <% if activity_item.duration %>
              <span><%= activity_item.duration %> minutes</span>
          <% end %>
          <% if activity_item.distance %>
              <span><%= activity_item.distance/1000.0 %> km</span>
          <% end %>
  <% else %>
      <td style="width:40px;" class="padded">
          <%= image_tag "walking40.png" %>
      <td class="historyTitle padded">
      <strong>Unknown</strong>
  <% end %>
  <br>
  <span> <%= activity_item.start_time.strftime("%F %T") if activity_item.start_time %></span>
  </td>

  <td class="iconColumn">
    <%= form_tag( "/users/#{current_user.id}/activities/#{activity_item.id}", id: "mod_act_#{activity_item.id}", remote: true, method: "put", class: "resource-update-form") do %>
        <button id="fav-icon" class="tableControl" onclick="alert('Not implemented yet...'); return(false);">
          <% if false %>
              <i class="fa fa-star fa-2x is-favorite"></i>
          <% else %>
              <i class="fa fa-star fa-2x no-favorite"></i>
          <% end %>
        </button>
    <% end %>
  </td>
  <td class="iconColumn">
    <%= form_tag( "/users/#{current_user.id}/activities/#{activity_item.id}", id: "delete_act_#{activity_item.id}", remote: true, method: "delete", class: "resource-delete-form") do %>
        <button class="tableControl">
          <i class="fa fa-trash-o fa-2x"></i>
        </button>
    <% end %>
  </td>
  <td class="iconColumn">
    <%= form_tag( "/users/#{current_user.id}/activities/#{activity_item.id}/edit", id: "edit_act_#{activity_item.id}", remote: true, method: "get", class: "resource-delete-form") do %>
        <button class="tableControl" onclick="alert('Not implemented yet...'); return(false);">
          <i class="fa fa-pencil fa-2x"></i>
        </button>
    <% end %>
  </td>
</tr>
