    <!--<!% else %>-->
      <!--<h2><!%= diet_item.name %></h2>-->
      <!--<p><!%= diet_item.date %></p>-->
    <!--<!% end %>-->
  <!--</a>-->

  <table>
    <tr>
      <td>
        <%= image_tag "#{diet_item.type.downcase}40.png" %>
      </td>
      <td class="diet_item">
        <input id="diet_data_<%= diet_item.id %>" type="hidden" value="<%=
            d = diet_item.as_json
            if diet_item.type!= "Smoke" && diet_item.food_type
              d.merge!({'food_name' => diet_item.food_type.name})
            else
              d.merge!({'food_name' => diet_item.name})
            end
            JSON.dump(d)
        %>">
        <% if diet_item.type== "Smoke" %>
            <strong><%= diet_item.name %></strong>
        <% elsif diet_item.type== "Food" %>
            <% if diet_item.food_type %>
                <strong><%= diet_item.food_type.name %></strong> <%= diet_item.amount * 100 %>g
            <% else %>
                <strong>Food</strong> <%= diet_item.name %>
            <% end %>
        <% elsif diet_item.type== "Drink" %>
            <% if diet_item.food_type %>
                <strong><%= diet_item.food_type.name %></strong> <%= diet_item.amount %>dl
            <% else %>
                <strong>Drink</strong> <%= diet_item.name %>
            <% end %>
        <% end %>
        <br/>
        <%= diet_item.date.strftime("%F, %H:%M") if diet_item.date %>
      </td>
      <td class="iconColumn">
        <%= form_tag( "/users/#{current_user.id}/diets/#{diet_item.id}", id: "updateFoodForm", remote: true, method: "put", class: "resource-update-form") do %>
            <button id="fav-icon" class="tableControl">
              <% if diet_item.favourite %>
                  <i class="fa fa-star fa-2x is-favorite"></i>
                  <input type="hidden" name="diet[favourite]" value="false" >
              <% else %>
                  <i class="fa fa-star fa-2x no-favorite"></i>
                  <input type="hidden" name="diet[favourite]" value="true" >
              <% end %>
            </button>
        <% end %>
      </td>
      <td class="iconColumn deleteDiet">
        <%= form_tag( "/users/#{current_user.id}/diets/#{diet_item.id}", id: "deleteFoodForm", remote: true, method: "delete", class: "resource-delete-form") do %>
            <button class="tableControl">
              <i class="fa fa-trash-o fa-2x"></i>
            </button>
        <% end %>
      </td>
    </tr>
  </table>
</li>
