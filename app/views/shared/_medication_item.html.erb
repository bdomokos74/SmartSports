<tr class="bg">

  <td style="width:40px;" class="padded">
    <% if  medication_item.medication_type %>
        <%= image_tag "#{medication_item.medication_type.group}40.png" %>
    <% else %>
        <%= image_tag "oral40.png" %>
    <% end %>
  </td>

  <td class="historyTitle padded">
    <% if  medication_item.medication_type and medication_item.medication_type.group %>
        <strong><%= medication_item.medication_type.name %></strong>
        <% if medication_item.amount && medication_item.amount > 0 %>
            <br><span>Mennyis√©g: <%= medication_item.amount %></span>
        <% end %>
    <% else %>
        <strong>Unknown medication</strong>
    <% end %>
    <br>
    <span> <%= medication_item.date.strftime("%F %T") if medication_item.date %></span>
  </td>

  <td class="iconColumn">
    <%= form_tag( "/users/#{current_user.id}/medications/#{medication_item.id}", id: "mod_med_#{medication_item.id}", remote: true, method: "put", class: "resource-update-form") do %>
        <button id="fav-icon" class="tableControl" onclick="alert('Not implemented yet...'); return(false);">
          <% if false %>
              <i class="fa fa-star fa-2x is-favorite"></i>
          <% else %>
              <i class="fa fa-star fa-2x no-favorite"></i>
          <% end %>
        </button>
    <% end %>
  </td>
  <td class="iconColumn">
    <%= form_tag( "/users/#{current_user.id}/medications/#{medication_item.id}", id: "delete_med_#{medication_item.id}", remote: true, method: "delete", class: "resource-delete-form") do %>
        <button class="tableControl">
          <i class="fa fa-trash-o fa-2x"></i>
        </button>
    <% end %>
  </td>
  <td class="iconColumn">
    <%= form_tag( "/users/#{current_user.id}/medications/#{medication_item.id}/edit", id: "edit_med_#{medication_item.id}", remote: true, method: "get", class: "resource-delete-form") do %>
        <button class="tableControl" onclick="alert('Not implemented yet...'); return(false);">
          <i class="fa fa-pencil fa-2x"></i>
        </button>
    <% end %>
  </td>
</tr>