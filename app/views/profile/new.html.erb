<input id="popup-messages" value="<%=@values%>" type="hidden" />
<% if is_mobile_device? || is_tablet_device? %>
    <div style="position:absolute;left:50%;margin-left:-240px;top:0px;">

      <div style="width: 480px;height: 228px;color: white;">
        <div style="padding-left: 100px;padding-top:20px;">
          <%= image_tag "logo-login.png", id:"loginLogo", class: "loginLogo", alt:"Login" %>
        </div>
        <div style="float: left;padding-top: 15px;padding-left: 100px;">
          <span style="font-family: 'Open Sans', sans-serif;font-size: 30px;"><%=t 'fill_personal_info' %></span><br>
        </div>
      </div>
    </div>
<% else %>
    <div style="position:absolute;left:47%;margin-left:-240px;top:100px;">

      <div style="width: 600px;height: 128px;color: grey;">
        <%= image_tag "logo-login.png", id:"loginLogo", class: "loginLogo", alt:"Login" %>

        <div style="float: left;padding-top: 35px;padding-left: 20px;">
          <span style="font-family: 'Open Sans', sans-serif;font-size: 30px;"><%=t 'fill_personal_info' %></span><br>
        </div>
      </div>
    </div>
<% end %>

<div id="registerDiv" class="registerDiv">
  <div>
    <%= form_tag("/users/#{current_user.id}/profile", :method => :post, :remote => true, :id=> 'profileForm') do %>
        <input type="hidden" id="user_id" name="profile[user_id]" value="<%= @current_user.id %>">
        <input id="firstname_field" name="profile[firstname]" type="text" class="loginField" placeholder="<%=t 'firstname' %>"/><br>
        <input id="lastname_field" name="profile[lastname]" type="text" class="loginField" placeholder="<%=t 'lastname' %>"/><br>
        <input type="radio"  name="profile[sex]" value="male"/> <%=t 'male' %>
        <input type="radio"  name="profile[sex]" value="female"/> <%=t 'female' %>
        <br/>
        <input id="weight_field" name="profile[weight]" type="text" class="loginField" placeholder="<%=t 'body_weight' %>"/>
        <div class="profileFormFieldUnit">kg</div><br>
        <input id="height_field" name="profile[height]" type="text" class="loginField" placeholder="<%=t 'height' %>"/>
        <div class="profileFormFieldUnit">cm</div><br>
        <label for="profile_birth_datepicker" ><%=t :date_of_birth%></label>
        <input id='profile_birth_datepicker' type='text' class="loginField" name="profile[dateofbirth]" value="<%= DateTime.current.strftime("%F") %>"/>
        <br/>

        <input type="submit" class="loginButton animButton" value="<%=t 'save' %>"/>
    <% end %>
    <%= form_tag("/users/#{current_user.id}/profile", :method => :post, :remote => true, :id=> 'emptyProfileForm') do %>
        <input type="hidden" id="user_id" name="profile[user_id]" value="<%= @current_user.id %>">
        <input type="submit" class="skipButton animButton" value="<%=t 'skip' %>"/>
    <%end%>
  </div>
</div>

<%= render partial: 'shared/popups' %>

<script>
    pages_menu()
    profile_loaded()
</script>
