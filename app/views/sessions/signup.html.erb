
<% if is_mobile_device? || is_tablet_device? %>
    <div style="position:absolute;left:50%;margin-left:-240px;top:0px;">

        <div style="width: 480px;height: 228px;color: white;">
            <div style="padding-left: 100px;padding-top:20px;">
                <%= image_tag "logo-login.png", id:"loginLogo", class: "loginLogo", alt:"Login" %>
            </div>
            <div style="float: left;padding-top: 15px;padding-left: 100px;">
                <span style="font-family: 'Open Sans', sans-serif;font-size: 30px;"><%=t 'sign_up_text_part1' %></span><br>
                <span><%=t 'sign_up_text_part2' %></span>
            </div>
        </div>
    </div>
<% else %>
    <div style="position:absolute;left:47%;margin-left:-240px;top:100px;">

        <div style="width: 600px;height: 128px;color: white;">
            <%= image_tag "logo-login.png", id:"loginLogo", class: "loginLogo", alt:"Login" %>

            <div style="float: left;padding-top: 35px;padding-left: 20px;">
                <span style="font-family: 'Open Sans', sans-serif;font-size: 30px;"><%=t 'sign_up_text_part1' %></span><br>
                <span><%=t 'sign_up_text_part2' %></span>
            </div>
        </div>
    </div>
<% end %>

<div id="registerDiv" class="registerDiv">
    <div>
        <%= form_tag users_path, :method => :post do %>
        <input id="username_field" name="user[email]" type="text" class="loginField animField" placeholder="<%=t 'email' %>"/><br>
        <input id="password_field" name="user[password]" type="password" class="loginField animField" placeholder="<%=t 'password' %>"/><br>
        <input id="password_retry_field" name="user[password_confirmation]" type="password" class="loginField animField" placeholder="<%=t 'password_confirm' %>"/><br>
        <input type="submit" class="loginButton animButton" value="<%=t 'join_button' %>"/>
        <% end %>
        <div style="padding-top: 5px;color: #A5A5A5;font-size: 12px;">
          <%=t 'sign_up_info' %>
        </div>
    </div>
</div>

<% if is_mobile_device? || is_tablet_device? %>
    <%= render partial: 'features.mobile', locals: {  msg: "Already a Member? Click <a class=\"signupLink\" href=\"#{login_path}\">Here</a> to Login!"} %>
<% else %>
    <% have_account = t 'have_account' %>
    <%= render partial: 'features', locals: {  msg: "<a class=\"signupLink\" href=\"#{login_path}\">" + have_account +"</a>"} %>
<% end %>

<script>
    signup_loaded()
</script>

