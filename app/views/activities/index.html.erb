<table>
    <tr>
        <th>username</th>
        <th>source</th>
        <th>date</th>
        <th>group</th>
        <th>total_duration</th>
        <th>steps</th>
        <th>distance</th>
        <th>calories</th>
        <th>elevation</th>
        <th>synced_at</th>
        <th>sync_final</th>
    </tr>
    <% for a in @activities %>

        <tr>
            <td><%= a.user.name %></td>
            <td><%= a.source %></td>
            <td><%= a.date %></td>
            <td><%= a.group %></td>
            <td><%= a.total_duration %></td>
            <td><%= a.steps %></td>
            <td><%= a.distance %></td>
            <td><%= a.calories %></td>
            <td><%= a.elevation %></td>
            <td><%= a.synced_at %></td>
            <td><%= a.sync_final %></td>
        </tr>

    <% end %>
</table>