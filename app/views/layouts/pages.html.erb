<!DOCTYPE html>
<html>
<head>
    <title>SmartSports</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>
<body>

<div class="content clearfix">

    <!--<div class="contenthead-spaceonly"></div>-->

    <div id="browser-menu-tab" class="browser-content clearfix">
        <div class="browser-subnav clearfix">
            <div class="userinfo-container left">
                <i class="fa fa-user fa-3x usericon"></i>
                <div class="userinfo">
                    <p class="title">Balint Domokos</p>
                    <p class="detail">Active since 1 month</p>
                </div>
            </div>
            <div class="browser-links right">
                <%= link_to "", {:href => "/pages/index", :class => "browser-subnav-item selected ", :id => "dashboard-button"}  do %>
                    <i class="fa fa-home fa-2x"></i>
                    <div>Dashboard</div>
                <% end %>
                <%= link_to "", { :href => "/pages/health", :class => "browser-subnav-item" , :id => "health-button"} do %>
                    <i class="fa fa-stethoscope fa-2x"></i>
                    <div>Health</div>
                <%end %>
                <%= link_to "", {:href => "/pages/training", :class => "browser-subnav-item" , :id => "training-button"} do %>
                    <i class="fa fa-bicycle fa-2x"></i>
                    <div>Training</div>
                <% end %>
                <%= link_to "", {:href => "/pages/lifestyle", :class => "browser-subnav-item" , :id => "lifestyle-button"} do %>
                    <i class="fa fa-cutlery fa-2x"></i>
                    <div>Lifestyle</div>
                <%end %>
                <%= link_to "", {:href => "/pages/genetics", :class => "browser-subnav-item" , :id => "genetics-button"} do %>
                    <i class="fa fa-bar-chart fa-2x"></i>
                    <div>Genetics</div>
                <%end %>
                <%= link_to "", {:href => "/pages/settings", :class => "browser-subnav-item" , :id => "settings-button"} do %>
                    <i class="fa fa-cogs fa-2x"></i>
                    <div>Settings</div>
                <%end %>
            </div>

        </div>

        <div id="browser-list-header-tab" class="browser-list-header clearfix">

        </div>
    </div>
    <script type="text/javascript">
        pages_menu();
    </script>

    <%= yield %>
</div>


</body>
</html>

